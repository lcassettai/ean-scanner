generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id                Int      @id @default(autoincrement())
  shortCode         String   @unique
  accessCode        String
  name              String
  type              String?
  askQuantity       Boolean  @default(false)
  askInternalCode   Boolean  @default(false)
  askProductName    Boolean  @default(false)
  askPrice          Boolean  @default(false)
  createdAt         DateTime @default(now())
  scans             Scan[]
}

model Scan {
  id            Int      @id @default(autoincrement())
  ean           String
  quantity      Int      @default(1)
  internalCode  String?
  productName   String?
  price         Float?
  observations  String?
  scannedAt     DateTime @default(now())
  session       Session  @relation(fields: [sessionId], references: [id])
  sessionId     Int
}
